<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:id="@+id/inner_trash_image"
        android:drawable="@drawable/ic_trash"
        android:width="@dimen/trash_icon"
        android:height="@dimen/trash_icon"
        android:gravity="center"/>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size
                android:width="@dimen/trash_circle"
                android:height="@dimen/trash_circle" />

            <stroke
                android:width="@dimen/stroke_size"
                android:color="#FFFFFFFF" />
            <corners android:radius="360dp"/>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>